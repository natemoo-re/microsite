    "lint-staged": "^10.4.2",
    "prettier": "^2.1.2"
  },
  "volta": {
    "node": "12.19.0",
    "npm": "7.0.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,css,md,json}": "prettier --write"
  }
}
